  text-align:center
} 

.weui-cell__bd{

  font-size: 0.8em;
}

.interval{

  height:50px;
}
.weui-cells:after {
  border-bottom: 0
}

.weui-navbar {
  width: 100%;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  white-space: nowrap;
  z-index: 100;
  background: white;
}
.rec {
  width: 100%;
  height: 7%;
}

.weui-navbar .default-item {
  /*width:25%;*/
  text-align: center;
  box-sizing: border-box;
  height: 8.5vh;
  padding-top: 2.5vh;
  font-size: 12px;
  display: inline-block;
  width: 20%;
  color: #666;
}

.weui-navbar .item_on {
  color: #dd2727;
  border-bottom: 5rpx solid #dd2727;
}

.weui-navbar-slider {
  position: absolute;
  height: 2px;
  content: "";
  bottom: 0px;
  left: 12.5rpx;
  transition: transform 0.3s;
}
